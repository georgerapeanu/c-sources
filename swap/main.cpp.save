#include <cstdio>
using namespace std;
FILE *f=fopen("swap.in","r");
FILE *g=fopen("swap.out","w");
stack <int> S;
int N;
char c[90005],nr,i,cost;
bool M;
int main()
{
    fscanf(f,"%d\n",&N);
    fgets(c+1,90005,f);
    for(i=1;i<=N;i++)
    {
        if(c[i+1]=='(')
        {
            S.push(i);
        }
        else
        {
            cost+=i-S.top();
            S.pop();
            if(!S.empty())
            {
                M=1;
                nr++;
            }
        }
    }
    fprintf(g,"%d\n",cost);
    if(M)
        fprintf(g,"%d\n%d",cost-2,nr);
    else
        fprintf(g,"-1\n0");
    fclose(f);
    return 0;
}
