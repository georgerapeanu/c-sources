#include <cstdio>
#include <algorithm>
using namespace std;
FILE *f=fopen("agitatie.in","r");
FILE *g=fopen("agitatie.out","w");
int M[2][4000],N,i,j,bestT,k;
typedef struct{int val,sens;} chestie;
chestie V[4000];
int main()
{
    fscanf(f,"%d",&N);
    for(i=1;i<=N;i++)
    {
        fscanf(f,"%d %d",&V[i].val,&V[i].sens);
        if(V[i].sens==-1&&V[i].val>bestT)
        bestT=V[i].val;
    }
    for(i=N;i>=1;i--)
    {
        M[(i&1)^1][bestT+1]=99999999;
        for(j=bestT;j>=0;j--)
        {
            M[(i&1)^1][j]=min(M[i&1][j]+abs(V[i].val+V[i].sens*j),M[(i&1)^1][j+1]);
        }
    }
    fprintf(g,"%d",M[1][0]);
    return 0;
}
