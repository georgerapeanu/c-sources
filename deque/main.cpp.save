#include <cstdio>
#include <deque>
using namespace std;
FILE *f=fopen("deque.in","r");
FILE *g=fopen("deque.out","w");
deque <pair<int,int>> D;
int  N,K,i,X;
long long suma;
int main()
{
    fscanf(f,"%d %d",&N,&K);
    for(i=1;i<=N;i++)
    {
        fscanf(f,"%d",&X);
        if(i<K)
        D.push_back(make_pair(X,i));
        else
        {
            while(!D.empty()&&(D.back()).first>=X) D.pop_back();
             if((D.front()).second<=i-K)
                D.pop_front();
            if(D.empty())
                suma+=X;
            else
                suma+=(D.front()).first;
            D.push_back(make_pair(X,i));
        }
    }
    fprintf(g,"%lld",suma);
    fclose(f);
    fclose(g);
    return 0;
}
