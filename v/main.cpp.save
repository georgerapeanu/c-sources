#include <cstdio>
using namespace std;
FILE *f=fopen("v.in","r");
FILE *g=fopen("v.out","w");
int dr[2][1505],st[2][1505],i,j,maxim=-2000000001,x,y,N,M,val;
int V[1505][1505];
int main()
{
    fscanf(f,"%d %d",&N,&M);
    for(i=1;i<=N;i++)
        for(j=1;j<=M;j++)
            fscanf(f,"%d",&V[i][j]);
    for(i=1;i<=N;i++)
    for(j=i;j<=M-i+1;j++)
    {
        st[i%2][j]=st[(i+1)%2][j-1]+V[i][j];
        dr[i%2][j]=dr[(i+1)%2][j+1]+V[i][j];
        if(st[(i+1)%2][j-1]+dr[(i+1)%2][j+1]+val>maxim&&j-i+1>0&&j+i-1<=M)
        {
            maxim=st[(i+1)%2][j-1]+dr[(i+1)%2][j+1]+V[i][j];
            x=j-i+1;
            y=j;
        }
    }
    fprintf(g,"%d %d %d",maxim,x,y);
    fclose(f);
    fclose(g);
    return 0;
}
